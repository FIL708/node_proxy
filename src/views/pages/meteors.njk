{% import '../partials/meteor-card.njk' as meteorCard %}
{% extends "../layouts/base.njk" %}

{% block title %}
    Meteors
{% endblock %}

{% block content %}
    <h1 class="display-3 text-center">Meteors</h1>
    <div class="text-center my-4">
        {% if total %}
        <h4 class="mx-3">Total: {{total}}</h4>
        {% endif %}

        {% if is_dangerous is defined %}
            <h4 class="mx-3">Is Any Dangerous: 
            {% if is_dangerous %}
                <span class="text-danger text-uppercase">YES!</span>
            {% else %}
                <span class="text-success text-uppercase">NO</span>
            {% endif %}
            </h4>
        {% endif %}
    </div>

    <ul class="d-flex flex-wrap justify-content-center gap-3">    
        {% for meteor in meteors %}

            {{ meteorCard.meteorData(meteor) }}
        
        {% endfor %}
    </ul>

{% endblock %}